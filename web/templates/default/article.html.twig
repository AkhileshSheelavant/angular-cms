<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>{{ article.title }}</title>
    <meta name="description" content="Default Index Template">
    <meta name="author" content="{{ article.author.userName }}">

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

<section>
    <h1>{{ article.title }}</h1>
    <article>
        {% set ct = article.content %}

        {{ twig.render(ct, {article:article}) | raw }}
    </article>
</section>

<pre>
    {{ dump(article) }}
</pre>


</body>
</html>